@page
@model WorkSchedule.Pages.Empresas.updateEmpresaModel

@{
    ViewData["Title"] = "updateEmpresa";
}

<h1>updateEmpresa</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empresa.Id" />
            <div class="form-group">
                <label asp-for="Empresa.razaoSocial" class="control-label"></label>
                <input asp-for="Empresa.razaoSocial" class="form-control" />
                <span asp-validation-for="Empresa.razaoSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.cnpj" class="control-label"></label>
                <input asp-for="Empresa.cnpj" class="form-control" />
                <span asp-validation-for="Empresa.cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.status" class="control-label"></label>
                <select asp-for="Empresa.status" class="form-control">
                    <option value="0">Inativo</option>
                    <option value="1">Ativo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ListEmpresas">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
