@page
@model WorkSchedule.Pages.Cargo.deleteCargoModel

@{
    ViewData["Title"] = "Desativar cargo";
}

<h3>Tem certeza que deseja desativar o cargo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do cargo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.nomeCargo)
        </dd>
        <dt class="col-sm-2">
            Tipo de escala
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.tipoEscala)
        </dd>
        <dt class="col-sm-2">
            Horas de trabalho
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.Trabalho)
        </dd>
        <dt class="col-sm-2">
            Horas de descanso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo.Descanso)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cargo.id" />
        <input type="submit" value="Desativar" class="btn btn-danger" /> |
        <a asp-page="./listcargo">Voltar</a>
    </form>
</div>
